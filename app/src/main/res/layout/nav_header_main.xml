<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/accent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme.NoActionBar">

    <ImageView
        android:id="@+id/logouser"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="30dp"
        app:srcCompat="@drawable/ic_mutiaraberlian" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/namauser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textColor="@color/customaccent"
            android:text="Ilham Rolis" />

        <TextView
            android:id="@+id/notlp"
            android:layout_toRightOf="@+id/namauser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textColor="@color/customaccent"
            android:text=" (085730536659)" />

        <TextView
            android:id="@+id/area"
            android:layout_below="@id/namauser"
            android:textColor="@color/customaccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surabaya" />

    </RelativeLayout>

</LinearLayout>
